{
    "manifest_version": 2,
    "name": "Lost in Lecture",
    "version": "1.0",
    "description": "Helps students maintain concentration during lectures",
    "permissions": [
      "activeTab",
      "storage",
      "http://localhost:5000/*",
      "audioCapture"
    ],
    "background": {
      "scripts": ["background/background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup/popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content/content.js"]
      }
    ]
  }